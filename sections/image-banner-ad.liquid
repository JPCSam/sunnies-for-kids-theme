{{ 'section-image-banner-ad.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #ImageAdBanner-{{section.id}} {
      padding-top: {{section.settings.padding_top}}px;
      padding-bottom: {{section.settings.padding_bottom}}px;
      height: {{section.settings.desktop_banner_height}}px;
  }

  @media screen and (max-width: 750px) {
    #ImageAdBanner-{{section.id}} {
      height: {{section.settings.mobile_banner_height}}px !important;
    }
  }
{%- endstyle -%}

<div class="background-primary no-heading" id="ImageAdBanner-{{ section.id }}" style="overflow: hidden;">
  <div class="image-banner-ad">
    <div class="image-banner-ad-wrapper">
      {%- if section.settings.content_image != blank -%}
        {{
          section.settings.content_image
          | image_url: width: 1420
          | image_tag: loading: 'lazy', sizes: sizes, widths: '275, 550, 710, 1420', class: ''
        }}
      {%- endif -%}
    </div>
    <div class="image-banner-ad-wrapper--mobile">
      {%- if section.settings.content_image_mobile != blank -%}
        {{
          section.settings.content_image_mobile
          | image_url: width: 1420
          | image_tag: loading: 'lazy', sizes: sizes, widths: '275, 550, 710, 1420', class: ''
        }}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Banner Ad",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "content_image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "range",
      "id": "desktop_banner_height",
      "min": 160,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Desktop Height",
      "default": 240
    },
    {
      "type": "range",
      "id": "mobile_banner_height",
      "min": 160,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Mobile Height",
      "default": 240
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 20,
      "unit": "px",
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 20,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Image Banner AD"
    }
  ]
}
{% endschema %}
